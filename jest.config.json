{
  "testRegex": ".*\\.*spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!./main.ts",
    "!./app.module.ts",
    "!./config/logger.config.ts"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/../$1"
  }
}